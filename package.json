{
  "private": true,
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "cssnano": "^4.1.10",
    "postcss-cli": "^6.1.3",
    "tailwindcss": "^1.0.5"
  },
  "scripts": {
    "clean": "rm -rf docs",
    "copy": "cp -r src/static/ docs && cp -r src/favicon/ docs",
    "devcss": "postcss src/styles/styles.css -o src/static/styles.css --env dev",
    "css": "rm docs/styles.css && postcss src/styles/styles.css -o docs/styles.css",
    "build": "npm run clean && npm run copy && npm run css",
    "open": "open src/static/index.html"
  }
}
